{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "AKS cluster name"
            }
        },
        "clusterGroup": {
            "type": "string",
            "metadata": {
                "description": "AKS cluster resource group"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "AKS cluster location"
            }
        }
    },
    "variables": {
        "containerGroupName": "init-container-group",
        "containerName": "init-container",
        "aksRoleAssignmentName": "[concat(parameters('clusterName'), '/Microsoft.Authorization/4abbcc35-e782-43d8-92c5-2d3f1bd2253f')]",
        "aksId": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[variables('containerGroupName')]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "osType": "Linux",
                "restartPolicy": "Never",
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "micya/init-container",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 0.5
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "CLUSTERNAME",
                                    "value": "[parameters('clusterName')]"
                                },
                                {
                                    "name": "CLUSTERGROUP",
                                    "value": "[parameters('clusterGroup')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/providers/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "[variables('aksRoleAssignmentName')]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '4abbcc35-e782-43d8-92c5-2d3f1bd2253f')]",
                "principalId": "[reference(variables('containerGroupName')).identity.principalId]",
                "scope": "[variables('aksId')]"
            }
        }
    ]
}